<div>
  <div class="flex">
    <div class="w-2/3 p-5 bg-white md:mr-10">
      <div class="p-5">
        <img class="h-64 w-full object-cover object-center" src="{{ group.main_photo.photo.versions.uncropped | default: 'https://dummyimage.com/720x400' }}" alt="blog">
      </div>
      <h1 class="text-2xl font-medium text-gray-700 mb-10">
        {{group.name}}
      </h1>

      <div class="m-y-5 flex">
        <img class="w-16 h-16 mr-5 object-cover object-center rounded-full shadow-md" src="{{  group.owner.profile.avatar.photo.versions.small | default: 'https://dummyimage.com/100x100' }}" />
        <a class="text-xl font-bold" href="/profile/{{group.owner.profile.slug}}">
          {{ group.owner.profile.first_name }} {{ group.owner.profile.last_name }}
        </a>
        <span class="text-xl font-medium">, Owner</span>
      </div>

      <div class="mt-10">
        Description
        <p class="mt-5 text-lg">
          {{ group.description }}
        </p>
      </div>
    </div>
    <div class="w-1/3 p-5 pt-10 bg-white">
      <h3 class="text-xl">Members ({{list.total_entries}})</h3>
      <div class="flex flex-wrap">
        {% for relationship in list.results %}
          {% assign user = relationship.l %}
          {% render 'theme/simple/groups/member_card_small', user: user %}
        {% endfor %}
      </div>

      {% if list.total_entries > list.results.size %}
        <a href="/groups/members/{{group.id}}" class="button button-secondary">
          View all
        </a>
      {% endif %}
    </div>
  </div>
</div>
