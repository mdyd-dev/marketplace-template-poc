<div>
  <div class="bg-gray-600 text-center p-16">
    <h1 class="text-3xl font-medium text-white">
      {{group.name}}
    </h1>
    <h2 class="text-xl font-medium text-white">
      {{group.summary}}
    </h2>
  </div>
  {% render 'theme/simple/groups/nav', tab: tab %}

  <div>
    {% liquid
      assign file = 'theme/simple/groups/' | append: tab
      case tab
      when 'activity'
        render 'theme/simple/groups/about', list: list, group: group
      when 'about'
        render 'theme/simple/groups/about', list: list, group: group
      when 'members'
        render 'theme/simple/groups/members', list: list, group: group
      endcase
    %}
  </div>
</div>
