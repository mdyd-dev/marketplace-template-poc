{% if user.id != current_user.id %}
  {% assign user_id = user.id | append: '' %}
  {% assign ids = current_user.followed_ids | map: 'id' %}

  {% liquid
    if ids contains user_id
    assign following = true
    else
    assign following = false
    endif
  %}

  <button href="#" class="{% if following %} following{% endif %}"
    title="Follow or unfollow user"
    data-follow-user="{{ user.id }}">

    <span class="button {% unless big %}button-sm{% endunless %} follow">
      {% if big %}<span class="mr-3">Follow</span>{% endif %}
      <svg class="w-4" xmlns="http://www.w3.org/2000/svg" focusable="false" viewBox="0 0 12 12"> <path fill="currentColor" d="M4 8c2.044 0 3.766 1.48 3.997 3.442a.5.5 0 01-.994.116C6.833 10.108 5.544 9 4 9S1.167 10.108.997 11.558a.5.5 0 01-.994-.116C.234 9.48 1.956 8 4 8zm0-6a2.5 2.5 0 110 5 2.5 2.5 0 010-5zm0 1a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm5.5-3a.5.5 0 01.492.41L10 .5V2h1.5a.5.5 0 01.492.41L12 2.5a.5.5 0 01-.5.5H10v1.5a.5.5 0 01-.992.09L9 4.5V3H7.5a.5.5 0 01-.492-.41L7 2.5a.5.5 0 01.5-.5H9V.5a.5.5 0 01.5-.5z"/> </svg>
    </span>

    <span class="button {% unless big %}button-sm{% endunless %} button-secondary unfollow">
      {% if big %}<span class="mr-3">Unfollow</span>{% endif %}
      <svg class="w-4" xmlns="http://www.w3.org/2000/svg" focusable="false" viewBox="0 0 12 12"> <path fill="currentColor" d="M10 2.503l1.29 1.248a.426.426 0 00.588 0 .393.393 0 000-.57L10.59 1.934 11.88.685a.394.394 0 00-.013-.557.427.427 0 00-.576-.013L10 1.364 8.71.118a.426.426 0 00-.4-.104.41.41 0 00-.295.284.394.394 0 00.108.389L9.41 1.933 8.122 3.18a.393.393 0 000 .57.423.423 0 00.589 0L10 2.504v-.002zm-2.003 8.939a.5.5 0 01-.994.116C6.833 10.108 5.544 9 4 9S1.167 10.108.997 11.558a.5.5 0 01-.994-.116C.234 9.48 1.956 8 4 8c2.044 0 3.766 1.48 3.997 3.442zM4 7a2.5 2.5 0 110-5 2.5 2.5 0 010 5zm0-1a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/> </svg>
    </span>

  </button>
{% endif %}
