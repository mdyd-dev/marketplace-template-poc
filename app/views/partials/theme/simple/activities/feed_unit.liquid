{% assign type = payload.type %}

<div class="mx-auto px-4 py-4 bg-white shadow-md rounded-lg w-full">
  {% render 'theme/simple/activities/feed_unit/header', payload: payload %}

  <div class="py-2">
    <p class="leading-snug">
      <div class="text-xs"> {% print payload.object.description %} </div>
      {% print payload.object.body %}
    </p>
  </div>

  {% if payload.object.photos.size > 0 %}
    <div class="mt-2">
      <img class="object-cover w-9 m-auto rounded-lg" src="{% print payload.object.photos.first.url.versions.small %}" alt="{% print payload.object.name %}">
    </div>
  {% elsif payload.target.photos.size > 0 %}
    <div class="mt-2">
      <img class="object-cover w-9 m-auto rounded-lg" src="{% print payload.target.photos.first.url.versions.small %}" alt="{% print payload.target.name %}">
    </div>
  {% endif %}
</div>
