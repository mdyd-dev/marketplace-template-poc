<div class="text-xs p-2">
  {% print current_user.name %}'s Private Activity Feed
</div>

<div class="w-full p-3">
  {%
  include 'theme/simple/comments/new_entry', commentable: current_user, commentable_type: 'profile', placeholder: "What's new?", presigned_url: presigned_url
  %}
  <div class="grid grid-cols-1 gap-6 my-6">

    {% for record in list.results %}
      {% render 'theme/simple/activities/feed_unit', payload: record.payload, current_user: current_user %}
    {% else %}
      <p class="container my-8 text-lg">{{ 'app.no_items_found' | t }}</p>
    {% endfor %}
  </div>

</div>

