<section class="container mx-auto">
  <div class="flex flex-wrap -mx-4">
    {% for record in list.results %}
      {% render 'theme/simple/profile/user_card', user: record.l, current_user: current_user %}
    {% else %}
      <p class="container mx-4 my-8 text-lg">{{ 'app.no_followers_found' | t }}</p>
    {% endfor %}
  </div>
</section>
