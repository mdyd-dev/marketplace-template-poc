<section class="text-gray-700 body-font">
  <div class="container md:px-5 md:py-5 mx-auto">
    <div class="flex flex-wrap -mx-4">
      {% for relation in list.results %}
        {% render 'theme/simple/profile/user_card', user: relation.r, current_user: current_user %}
      {% else %}
        <p class="container my-8 text-lg mx-4">{{ 'app.no_items_found' | t }}</p>
      {% endfor %}
    </div>
  </div>
</section>
