<div class="flex flex-col">
  <div class="mr-10">
    {% liquid
      assign img_url = user.avatar.photo.versions.small
      unless img_url
        assign img_url = 'images/user.svg' | asset_url
      endunless
    %}
    <img src="{{ img_url }}" alt="" class="object-cover object-center w-64 h-64 mx-auto text-gray-400 rounded-full shadow-md md:mx-0">
  </div>
</div>
