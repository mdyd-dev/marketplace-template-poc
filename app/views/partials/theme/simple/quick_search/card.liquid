{% function url = "f_link_to", object: model %}

<div class="w-full px-0 mx-4 mb-8 lg:w-1/4 md:w-3/3 card bg-white rounded overflow-hidden">
  <a class="relative block h-64 overflow-hidden shadow-sm" href="{{ url }}">
    <img alt="{{ object.name | default: object.id | truncate: 120 }}"
         class="block object-cover object-center w-full h-full"
         src="{{ model.photo.photo.versions.small }}">
  </a>

  <div class="md:p-4">
    <header class="text-gray-600 text-xs">
      {% print model.type | t: scope: 'app.quick_search.type' %}
    </header>

    <div class="mt-4">
      <h2 class="text-lg font-medium text-gray-900 ">
        <a href="{{ url }}">{{ model.name }}</a>
      </h2>
    </div>
  </div>
</div>