<h1 class="mb-6 text-2xl">
  <a href="/dashboard">{{ 'app.dashboard' | t }}</a>
  / {{ 'app.' | append: role | t }}
  / {{ 'app.items.list' | t }}
</h1>

{% if items.results.size > 0 %}
  <div class="container mx-auto">
    <div class="flex flex-wrap md:-mx-4 cards">
      {% for item in items.results %}
        {% include 'theme/simple/items/card', item: item %}
      {% endfor %}
    </div>
  </div>
{% else %}
  <p>You don't have any items yet.</p>
  <div class="flex mt-4">
    <a href="/items/new" class="w-auto flex-0 button">
      {{ 'app.dashboard-items.list-your-first-item' | t }}
    </a>
  </div>
{% endif %}
