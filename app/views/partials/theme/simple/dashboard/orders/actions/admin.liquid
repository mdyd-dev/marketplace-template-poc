{% if order.status.name == 'app.statuses.orders.placed' %}
  {% render 'theme/simple/statuses/quick_form',
    authenticity_token: context.authenticity_token,
    name: 'paid',
    scope: 'app.statuses.orders',
    object_id: order.id,
    return_to: context.location.href,
    label: 'app.mark-as-paid' %}

  {% render 'theme/simple/statuses/quick_form',
    authenticity_token: context.authenticity_token,
    name: 'paid',
    scope: 'app.statuses.orders',
    object_id: order.id,
    return_to: context.location.href,
    label: 'app.pay' %}

  {% render 'theme/simple/statuses/quick_form',
    authenticity_token: context.authenticity_token,
    name: 'cancelled',
    scope: 'app.statuses.orders',
    object_id: order.id,
    return_to: context.location.href,
    label: 'app.cancel', secondary: true %}
{% endif %}

{% if order.status.fullname == 'app.statuses.orders.paid' %}
  {% render 'theme/simple/statuses/quick_form',
    authenticity_token: context.authenticity_token,
    name: 'shipped',
    scope: 'app.statuses.orders',
    object_id: order.id,
    return_to: context.location.href,
    label: 'app.ship' %}
{% endif %}
