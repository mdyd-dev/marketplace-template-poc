{% if order.status.name == 'app.statuses.orders.placed' %}
  {% if order.properties.paid_at == null %}
    <form action="/statuses/create" method="post" class="mt-2">
      {% include 'authenticity_token' %}
      <input type="hidden" name="status" value="app.statuses.orders.paid"/>
      <input type="hidden" name="order_id" value="{{ order.id }}"/>

      <button class="button button-sm">{{ 'app.pay' | t }}</button>
    </form>

    <a href="/orders/review?order_id={{order.id}}" class="button button-sm mt-2">
      {{ 'app.pay_online' | t }}
    </a>
  {% endif %}

  <form action="/statuses/create" method="post" class="mt-2">
    {% include 'authenticity_token' %}
    <input type="hidden" name="status" value="app.statuses.orders.canceled"/>
    <input type="hidden" name="order_id" value="{{ order.id }}"/>

    <button class="button button-sm button-secondary">{{ 'app.cancel' | t }}</button>
  </form>
{% endif %}
