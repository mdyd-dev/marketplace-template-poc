<!-- push to background -->
{% liquid
  graphql r = 'items/create', args: item

  if r.errors
    log r.errors, type: "Graphql error:"
  else
    assign item = r.model_create
    assign success = true

    include 'lib/events/create-event', type: 'item_created', actor_id: item.owner, object_id: item.id

    export item
    export success, namespace: 'item'
  endif
%}
