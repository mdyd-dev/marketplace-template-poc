{% liquid
  function_rc order = 'lib/queries/orders/find', id: event.target.id
  include 'lib/queries/items/find',  id: order.item.id

  assign order_status = order.status.name

  if order_status == 'app.order_statuses.paid'
    include 'lib/commands/item_statuses/create/build', item_id: context.exports.item.id, name: 'app.item_statuses.sold'
    include 'lib/commands/item_statuses/create/check', object: context.exports.object

    if context.exports.object.valid
      include 'lib/commands/item_statuses/create/execute', object: context.exports.object
    else
      log context.exports.object, type: 'ERROR 500'
    endif
  endif
%}
