<!-- push to background -->
{% liquid
  graphql r = 'orders/create', args: order

  if r.errors
    log r.errors, type: 'errors.graphql.invalid'
    assign order = order | add_hash_key: 'errors', r.errors
    assign order = order | add_hash_key: 'valid', false
  else
    assign order = r.model_create
    assign order = order | add_hash_key: 'valid', true
  endif

  export order
%}
