{% parse_json object %}
  {
    "id":          {{ object.id | json }},
    "owner":       {{ owner | json }},
    "name":        {{ object.name | json }},
    "tags":        {{ object.tags | downcase | split: ',' | uniq }},
    "description": {{ object.description | default: "" | json }},
    "category":    {{ object.category | default: "" | json }},
    "price":       {{ object.price | to_positive_integer: 1 | times: 100 }},
    "uuid":        {{ object.uuid | json }}
  }
{% endparse_json %}

{% liquid
  export object
%}
