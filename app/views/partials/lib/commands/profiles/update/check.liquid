{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.first_name == blank
    include 'lib/register_error', contract: c, field_name: 'first_name', key: 'app.errors.blank'
  endif

  if object.last_name == blank
    include 'lib/register_error', contract: c, field_name: 'last_name', key: 'app.errors.blank'
  endif

  if object.name == blank
    include 'lib/register_error', contract: c, field_name: 'name', key: 'app.errors.blank'
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
