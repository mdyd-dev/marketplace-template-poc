{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.uuid == blank
    include 'lib/register_error', contract: c, field_name: 'uuid', key: 'app.errors.blank'
  endif

  if object.user_uuid == blank
    include 'lib/register_error', contract: c, field_name: 'user_uuid', key: 'app.errors.blank'
  endif

  if object.name == blank
    include 'lib/register_error', contract: c, field_name: 'name', key: 'app.errors.blank'
  endif

  if object.slug == blank
    include 'lib/register_error', contract: c, field_name: 'slug', key: 'app.errors.blank'
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return_rc object
%}
