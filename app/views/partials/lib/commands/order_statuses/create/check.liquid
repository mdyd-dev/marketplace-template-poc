{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.order_id == blank
    include 'lib/register_error', contract: c, field_name: 'order_id', key: 'app.errors.blank'
  endif

  if object.name == blank
    include 'lib/register_error', contract: c, field_name: 'name', key: 'app.errors.blank'
  endif

  if object.timestamp == blank
    include 'lib/register_error', contract: c, field_name: 'timestamp', key: 'app.errors.blank'
  endif

  assign object = object | add_hash_key: 'errors', c.errors
  assign object = object | add_hash_key: 'valid', c.valid

  export object
%}
