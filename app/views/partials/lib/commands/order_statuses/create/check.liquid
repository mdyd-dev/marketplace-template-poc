{% parse_json status %}
{
  "name": {{ status | json }},
  "order_id": {{ order.id | json }},
  "timestamp": {{ 'now' | to_time | json }}
}
{% endparse_json %}

{% liquid
  assign valid = true

  if status.order_id == blank
    assign valid = false
  endif

  if current_user_id == blank
    assign valid = false
  endif

  if status.name == blank
    assign valid = false
  endif

  if status.timestamp == blank
    assign valid = false
  endif

  export status
  export valid, namespace: 'status'
%}
