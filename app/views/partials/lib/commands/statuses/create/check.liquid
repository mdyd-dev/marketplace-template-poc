{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.name == blank
    include 'lib/register_error', contract: c, field_name: 'name', key: 'app.errors.blank'
  endif

  if object.fullname == blank
    include 'lib/register_error', contract: c, field_name: 'fullname', key: 'app.errors.blank'
  endif

  if object.scope == blank
    include 'lib/register_error', contract: c, field_name: 'scope', key: 'app.errors.blank'
  endif

  if object.timestamp == blank
    include 'lib/register_error', contract: c, field_name: 'timestamp', key: 'app.errors.blank'
  endif

  if object.object_id == blank
    include 'lib/register_error', contract: c, field_name: 'object_id', key: 'app.errors.blank'
  endif

  if object.profile_id == blank
    include 'lib/register_error', contract: c, field_name: 'profile_id', key: 'app.errors.blank'
  endif

  hash_assign object['valid'] = c.valid
  hash_assign object['errors'] = c.errors

  return object
%}
