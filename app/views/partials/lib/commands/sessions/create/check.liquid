{% liquid
  assign c = '{ "errors": {}, "valid": true }' | parse_json

  if object.email == blank
    include 'lib/register_error', contract: c, field_name: 'email', key: 'app.errors.blank'
  endif

  if object.password == blank
    include 'lib/register_error', contract: c, field_name: 'password', key: 'app.errors.blank'
  endif

  assign object = object | add_hash_key: 'errors', c.errors
  assign object = object | add_hash_key: 'valid', c.valid

  export object
%}
