{% liquid
  graphql result = 'sessions/create', email: object.email, password: object.password

  assign c = '{ "errors": {}, "valid": true}' | parse_json
  if result.errors.size > 0
    include 'lib/register_error', contract: c, field_name: 'email', key: 'app.errors.session_create_failed'
  endif

  assign object = object | add_hash_key: 'errors', c.errors
  assign object = object | add_hash_key: 'valid', c.valid
%}
