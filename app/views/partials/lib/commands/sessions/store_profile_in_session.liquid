{% parse_json basic_profile %}
  {
    "id":  {{ object.id | json }},
    "slug":  {{ object.slug | json }},
    "name":  {{ object.name | json }},
    "first_name":  {{ object.first_name | json }},
    "last_name":  {{ object.last_name | json }}
  }
{% endparse_json %}

{% liquid
  assign profile = basic_profile | json
  session profile = profile
  return true
%}
