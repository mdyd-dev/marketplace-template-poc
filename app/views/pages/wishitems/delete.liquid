---
method: post
---
{% liquid
  include 'lib/must_be_authenticated'

  function_rc item = 'lib/data/queries/wishlist/find', id: context.params.id
  function_rc object = 'lib/commands/wishlist/delete', item: item  

  if object.valid
    include 'redirect_to', url: '/dashboard/wishlist', notice: 'app.wishlist.item_deleted'    
  
  else
    assign error = object.errors.base[0]    
    include  'redirect_to', url: '/dashboard/wishlist', error: error
  endif
%}
