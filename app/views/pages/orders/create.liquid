---
method: post
---

{% liquid
  include 'lib/must_be_authenticated'
  function current_user = 'lib/data/queries/profiles/find', user_id: context.current_user.id
  function item = 'lib/data/queries/items/find', id: context.params.item_id

  function object = 'lib/commands/orders/create', item: item, current_user: current_user

  if object.valid
    function status = 'lib/commands/order_statuses/create', order: object, current_user_id: current_user.id, name: 'app.order_statuses.placed'

    include 'lib/commands/events/create', type: 'order_created', actor_id: object.buyer.id, target_id: context.params.item_id, object_id: object.id

    include 'redirect_to', url: '/dashboard/buy/orders', notice:  'app.orders.created'
  else
    include 'theme/simple/orders/new', item: item, order: object
  endif

%}
