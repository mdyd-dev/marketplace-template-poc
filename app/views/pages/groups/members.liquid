{% liquid
  include 'lib/must_be_authenticated'

  assign group_id = context.params.slug3 | split: '-' | last
  function_rc group = 'lib/data/queries/groups/find', id: group.id, with_owner: false

  unless group.id
    render 'theme/simple/404', status: 404
    break
  endunless

  function current_user = 'lib/data/queries/profiles/find', user_id: context.current_user.id, membership: true
  function list = 'lib/data/queries/relationships/search', limit: 20, name: 'membership', r_id: group_id

  include 'theme/simple/groups/show', group: group, current_user: current_user, tab: 'members', list: list, context: context
  render 'theme/simple/groups/join.js', authenticity_token: context.authenticity_token
  render 'theme/simple/items/follow.js', authenticity_token: context.authenticity_token
%}
