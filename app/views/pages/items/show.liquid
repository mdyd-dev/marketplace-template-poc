---
slug: items
---

{% liquid
  function current_user = 'lib/data/queries/profiles/find', user_id: context.current_user.id, followships: true
  include 'lib/validate_profile_completness', profile: current_user

  assign id = context.params.slug2 | split: '-' | last
  function item = 'lib/data/queries/items/find', id: id

  unless item.id
    render 'theme/simple/404', status: 404
    break
  endunless

  render 'theme/simple/items/show', item: item, current_user: current_user, authenticity_token: context.authenticity_token
  render 'theme/simple/items/follow.js', authenticity_token: context.authenticity_token
%}
