{% liquid
  function query = 'lib/data/queries/items/search/build', query: context.params, limit: 50
  function items = 'lib/data/queries/items/search/execute', query: query

  function filters = 'lib/data/queries/search/filters', query: context.params

  assign response = '{}' | parse_json
  hash_assign response['items'] = items
  hash_assign response['filters'] = filters

  include 'theme/json/items/index', response: response
%}
