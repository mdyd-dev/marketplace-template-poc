{% liquid
  function current_user = 'lib/data/queries/profiles/find', user_id: context.current_user.id

  function models = 'lib/data/queries/models/search', limit: 20

  assign feeds = '{}' | parse_json
  hash_assign feeds['items'] = items
  hash_assign feeds['comments'] = comments
  hash_assign feeds['groups'] = groups
  hash_assign feeds['profiles'] = profiles


  function filters = 'lib/data/queries/search/filters', query: context.params
  comment
  include 'theme/simple/items/index', items: items, filters: filters, current_user: current_user
  endcomment
  include 'theme/simple/home/index', feeds: feeds, current_user: current_user
  render 'theme/simple/items/follow.js', authenticity_token: context.authenticity_token
%}
