---
slug: 'dashboard/groups'
method: delete
---
{% liquid
  include 'lib/must_be_authenticated'

  function group = 'lib/data/queries/groups/find', id: context.params.id, owner_id: context.current_user.id
  function object = 'lib/commands/groups/delete', group: group

  if object.valid
    include 'redirect_to', url: '/dashboard/groups', notice: 'app.groups.deleted'
  else
    include 'redirect_to', url: '/dashboard/groups', error: 'app.groups.delete_failed'
  endif
%}
