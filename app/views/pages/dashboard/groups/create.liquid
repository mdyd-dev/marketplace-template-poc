---
slug: dashboard/groups
method: post
---
{% liquid
  include 'lib/must_be_authenticated'
  function current_user = 'lib/data/queries/profiles/find', user_id: context.current_user.id

  function object = 'lib/commands/groups/create', object: context.params.group, owner_id: current_user.id
  if object.valid
    include 'lib/commands/events/create', type: 'group_created', actor_id: current_user.id, object_id: object.id
    include 'redirect_to', url: '/dashboard/groups'
  else
    graphql presigned_url = 'photos/presign' | dig: 'presigned'
    include 'theme/simple/dashboard/groups/new', object: object, presigned_url: presigned_url
  endif
%}
