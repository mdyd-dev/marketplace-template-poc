---
slug: dashboard/profile
method: post
---
{% liquid
  include 'lib/must_be_authenticated'

  function user = 'lib/data/queries/users/find', id: context.current_user.id
  function object = 'lib/commands/profiles/create', object: context.params.profile, user: user

  if object.valid
    session user_profile_uuid = user.profile.uuid
    include 'redirect_to', url: '/dashboard/profile/edit'
  else
    graphql presigned_url = 'users/photos/presign' | dig: 'presigned'
    render 'theme/simple/dashboard/profile/edit', object: object, context: context, presigned_url: presigned_url
  endif
%}
