---
method: post
---
{% liquid
  function_rc object = 'lib/commands/sessions/create', object: context.params.user

  if object.valid
    function user = 'lib/data/queries/users/find', id: context.current_user.id
    session user_profile_uuid = user.profile.uuid | default: user.uuid

    include 'redirect_to', url: '/', notice: 'app.sessions.created'
  else
    include 'theme/simple/sessions/new', object: object
  endif
%}
