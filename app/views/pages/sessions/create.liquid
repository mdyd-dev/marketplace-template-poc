---
method: post
---
{% liquid
  include 'lib/commands/sessions/create/build', object: context.params.user
  include 'lib/commands/sessions/create/check', object: context.exports.object

  if context.exports.object.valid
    include 'lib/commands/sessions/create/execute', object: context.exports.object

    if context.exports.object.valid
      include 'redirect_to', url: '/', notice: 'app.sessions.created'
    else
      include 'theme/simple/sessions/new', object: context.exports.object
    endif
  else
    include 'theme/simple/sessions/new', object: context.exports.object
  endif
%}
